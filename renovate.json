{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>dwp/secure-development/renovate-bot//shared-configs/renovate-auto-merge"
  ],
  "packageRules": [
    {
      "groupName": "churn-updates",
      "addLabels": [
        "Automatic Merge"
      ],
      "matchUpdateTypes": [
        "digest",
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "platformAutomerge": true,
      "gitLabIgnoreApprovals": true,
      "commitMessageAction": "",
      "commitMessageExtra": ""
    }
  ]
}
